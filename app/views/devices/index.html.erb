<h1>
	Listing devices

	<% if @network %>
		for <%= @network.name %>
	<% end %>
</h1>

<table class="table js-tablesorter">
	<thead>
		<tr>
			<th>MAC</th>
			<th>Networks</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @devices.each do |device| %>
			<tr>
				<td><%= link_to render_mac(device.mac), device %></td>
				<td><%= link_to device.networks.count, device_networks_path(device) %></td>
				<td><%= link_to 'Edit', edit_device_path(device) %></td>
				<td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<% if @network %>
	<%= link_to 'New Device', new_network_device_path(@network), class: 'btn btn-default' %>
<% else %>
	<%= link_to 'New Device', new_device_path, class: 'btn btn-default' %>
<% end %>
